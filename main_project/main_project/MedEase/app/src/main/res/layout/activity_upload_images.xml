<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Upload_images">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="25dp"
        android:layout_marginBottom="30dp"
        android:text="UPLOAD THE IMAGE"
        android:textColor="@android:color/black" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="200dp"
        android:layout_height="171dp"
        android:layout_marginTop="0dp"
        android:autofillHints="PHOTO UPLOAD"
        android:background="@drawable/uploadnew"
        android:contentDescription="Photo Upload"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:text="UPLOAD IMAGE" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button9"
        android:layout_width="137dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttoncommon"
        android:text="UPLOAD"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/viewtumorimages"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>